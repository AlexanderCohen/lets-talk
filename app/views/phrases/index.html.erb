<div data-controller="phrase">
  <h1 class="text-2xl font-bold mb-4">Your Phrases</h1>
  <div class="mb-8">
    <h2 class="text-xl font-semibold mb-2">Create New Phrase</h2>
    <%= form_with(model: Phrase.new, local: false, data: { phrase_target: "form", action: "submit->phrase#createPhrase" }, class: "space-y-4") do |form| %>
      <div>
        <%= form.label :text, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :text, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <div>
        <%= form.label :category, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :category, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <%= form.submit "Create Phrase", class: "mt-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <% end %>
  </div>
  <div data-phrase-target="phrasesList">
    <% @phrases.group_by(&:category).each do |category, phrases| %>
      <div class="mb-8">
        <h2 class="text-xl font-semibold mb-4"><%= category %></h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% phrases.each do |phrase| %>
            <div id="phrase_<%= phrase.id %>" 
                 class="bg-white p-4 rounded shadow cursor-pointer transition duration-300 ease-in-out transform hover:scale-105"
                 data-phrase-target="playButton"
                 data-action="click->phrase#play"
              data-audio-url="<%= phrase.audio_url %>">
              <p class="text-lg mb-2"><%= phrase.text %></p>
              <div class="flex justify-between items-center">
                <span data-phrase-target="playStatus" class="text-sm text-gray-500">Click to play</span>
                <div class="space-x-2">
                  <%= link_to edit_phrase_path(phrase), class: "text-gray-400 hover:text-yellow-500 transition duration-300", title: "Edit" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to phrase, method: :delete, data: { confirm: "Are you sure?" }, class: "text-gray-400 hover:text-red-500 transition duration-300", title: "Delete" do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>