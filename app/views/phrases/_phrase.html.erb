<div id="phrase_<%= phrase.id %>" 
    class="bg-white p-4 rounded shadow cursor-pointer transition duration-300 ease-in-out transform hover:scale-105 max-w-64"
    data-phrase-target="playButton"
    data-action="click->phrase#play"
  data-audio-url="<%= phrase.audio_url %>"
  >
  <p class="text-lg mb-2"><%= phrase.text&.capitalize %></p>
  <div class="flex justify-between items-center">
    <span data-phrase-target="playStatus" class="text-sm text-gray-500">Click to play</span>
    <div class="space-x-2">
      <%= link_to edit_phrase_path(phrase), class: "text-gray-400 hover:text-yellow-500 transition duration-300", title: "Edit", data: { action: "click->phrase#stopPropagation" } do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <% if phrase.archived %>
        <%= button_to archive_phrase_path(phrase), method: :patch, class: "text-gray-400 hover:text-blue-500 transition duration-300", title: "Unarchive", data: { action: "click->phrase#stopPropagation" } do %>
          <i class="fas fa-archive"></i>
        <% end %>
      <% else %>
        <%= button_to archive_phrase_path(phrase), method: :patch, class: "text-gray-400 hover:text-blue-500 transition duration-300", title: "Archive", data: { action: "click->phrase#stopPropagation" } do %>
          <i class="fas fa-archive"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>