<%= form_with(model: phrase, local: false, data: { phrase_target: "form", action: "submit->phrase#createPhrase" }, class: "space-y-4") do |form| %>
  <% if phrase.errors.any? %>
    <div class="error-messages bg-red-50 text-red-500 p-3 rounded mb-4">
      <h2><%= pluralize(phrase.errors.count, "error") %> prohibited this phrase from being saved:</h2>
      <ul class="list-disc list-inside">
        <% phrase.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="flex flex-row">
    <div class="flex-1 mr-3">
      <%= form.label :text, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :text, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>
    <div class="flex-1">
      <%= form.label :category, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1 flex flex-row rounded-md shadow-sm justify-between">
        <%= form.select :category,
                        options_for_select(@categories, phrase.category),
                        { prompt: "Select or create new category" },
                        class: "flex-1 p-2rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50",
                        data: { action: "change->phrase#toggleNewCategory" } %>
        <%= form.text_field :new_category,
                          placeholder: "New category",
                          class: "mx-2 p-2 block w-full rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50",
                          style: "",
                          data: { phrase_target: "newCategory" } %>
      </div>
    </div>
  </div>
  <div class="flex flex-row justify-between">
    <%= form.submit phrase.new_record? ? "Save Phrase" : "Update Phrase", class: "mt-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <div class="mb-4">
      <%= link_to 'View Archived Phrases', archived_phrases_path, class: "hover:bg-gray-700 text-gray-400 font-bold py-2 px-4 rounded" %>
    </div>
  </div>
<% end %>