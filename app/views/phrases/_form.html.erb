<%= turbo_frame_tag "new_phrase" do %>
  <%= form_with(model: phrase, local: false, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
    <% if phrase.errors.any? %>
      <div id="error_explanation" class="mb-4">
        <h2 class="text-red-500 text-lg">Please fix the following errors:</h2>
        <ul>
          <% phrase.errors.full_messages.each do |message| %>
            <li class="text-red-500"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="mb-4">
      <%= form.label :text, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_area :text, rows: 3, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mb-4">
      <%= form.label :category, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :category, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="flex items-center justify-between">
      <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
<% end %>